<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/sv_tz"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_zy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                    <ImageView
                        android:id="@+id/rl_bg"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_mine"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                    </ImageView>
                    <ImageView
                        android:id="@+id/img_tou"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/icon_tou"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/img_tou"
                        android:id="@+id/text_deng"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/bg_color"
                        android:text="等级"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/text_deng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/img_dengji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView2" />
                        <TextView
                            android:id="@+id/tv_zy_xq"
                            android:textColor="@color/system_bar_color"
                            android:textSize="5sp"
                            android:text="1"
                            android:layout_marginRight="2.5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageView2" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_name"
                        android:textColor="@color/black_san"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/text_sex"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/text_guanzhu"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/bg_color"
                                android:textSize="17sp"
                                android:text="0"
                                android:id="@+id/guan_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolcr"
                                android:textSize="14sp"
                                android:text="关注"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/text_fensi"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/bg_color"
                                android:textSize="17sp"
                                android:text="0"
                                android:id="@+id/fen_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolcr"
                                android:textSize="14sp"
                                android:text="粉丝"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/text_collect"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/bg_color"
                                android:textSize="17sp"
                                android:text="0"
                                android:id="@+id/collect_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center"
                                android:textColor="@color/textcolcr"
                                android:textSize="14sp"
                                android:text="点赞"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_qm"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:background="@color/back_bei"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/liner_tiezi"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/text_pin"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textColor="@color/text_orage"
                            android:textSize="16sp"
                            android:text="帖子（0）"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:id="@+id/v1"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/text_orage"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/liner_dongtai"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_zan"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textColor="@color/black_san"
                            android:textSize="16sp"
                            android:text="动态（0）"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:visibility="gone"
                            android:id="@+id/v2"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/text_orage"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"></View>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/color_hui"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </com.liaoinstan.springview.widget.SpringView>

    <RelativeLayout
        android:id="@+id/rl_bt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_zyfh"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_fh_3x"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dt_title"
            android:textSize="16sp"
            android:text="TA的主页"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_gz"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_sz_3x"/>

    </RelativeLayout>

</RelativeLayout>