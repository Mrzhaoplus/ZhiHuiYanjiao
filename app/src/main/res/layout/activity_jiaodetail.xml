<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/real"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_xxjd"
            android:textColor="@color/black_san"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="郊点详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/text_share"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/icon_share"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_back"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/sv_pj"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.widget.NestedScrollView
            android:layout_above="@+id/lines"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/back_bei"
                    />
                <TextView
                    android:layout_margin="15dp"
                    android:id="@+id/text_title"
                    android:textColor="@color/black_san"
                    android:textSize="17sp"
                    android:text=""
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/back_bei"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_tou"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_tou"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/relativeLayout4"
                        />
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_tou"
                        android:layout_width="match_parent"
                        android:layout_marginRight="95dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/relativeLayout4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:textColor="@color/black_san"
                                    android:textSize="16sp"
                                    android:text=""
                                    android:id="@+id/text_name"
                                    android:maxWidth="145dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <RelativeLayout
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="20dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_height="20dp">
                                    <ImageView
                                        android:src="@drawable/img_dengji"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView2" />
                                    <TextView
                                        android:id="@+id/text_dengji"
                                        android:textColor="#f8b804"
                                        android:textSize="5sp"
                                        android:text="1"
                                        android:layout_marginRight="2.5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignEnd="@+id/imageView2" />
                                </RelativeLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/da_address"
                                android:textSize="14sp"
                                android:text=""
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>




                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rela_guanzhu"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape_backorageradioline"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_jdxq_gz"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="+关注"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                </RelativeLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_count"
                    android:textSize="14sp"
                    android:text="ssssssssssss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jiao_Recycler"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    ></android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/img_collect"
                            android:textColor="@color/black_san"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/icon_collect"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="收藏"
                            android:background="@drawable/shape_hx"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_zan"
                            android:textColor="@color/black_san"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/icon_dianzan"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/shape_hx"
                            android:text="点赞"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/back_bei"
                    />
                <TextView
                    android:id="@+id/text_liuyan"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="全部留言（0）"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/back_bei"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jiao_pinglun"
                    ></android.support.v7.widget.RecyclerView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/back_bei"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.liaoinstan.springview.widget.SpringView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/back_bei"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/lines"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="50dp">
        <EditText
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ed_text"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请说说您的看法..."
            android:singleLine="true"
            android:maxLength="140"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/shape_fabu"
            android:id="@+id/button_fabu"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="发布"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_marginRight="10dp"
            android:layout_height="33dp" />
    </LinearLayout>
</LinearLayout>
