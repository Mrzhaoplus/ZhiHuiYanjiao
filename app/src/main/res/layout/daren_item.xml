<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_tou"
            android:layout_margin="10dp"
             android:src="@drawable/icon_tou"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_tou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black_san"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text=""
                android:id="@+id/text_name"
                android:maxWidth="160dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/da_zan"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:text="0"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_name"
                android:drawableLeft="@drawable/da_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"

                android:layout_toRightOf="@id/text_name"
                android:layout_width="20dp"
                android:layout_height="20dp">
            <ImageView
                android:src="@drawable/img_dengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" />
            <TextView
                android:id="@+id/tv_dj"
                android:textColor="#f8b804"
                android:textSize="5sp"
                android:text="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView2" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/item_back"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="15dp" />
            <TextView
                android:textColor="#FF6F11"
                android:gravity="center"
                android:background="@drawable/img_yuan"
                android:layout_centerHorizontal="true"
                android:id="@+id/text_dengji"
                android:layout_toLeftOf="@id/item_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_bei"/>
</LinearLayout>
