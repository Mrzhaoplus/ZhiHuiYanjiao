<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:background="@color/white"
              android:id="@+id/ll_view"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_nr"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/img_tou"
            android:layout_toEndOf="@+id/img_tou">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black_san"
                    android:textSize="16sp"
                    android:text="我的昵称"
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/text_name"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:src="@drawable/img_dengji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2" />
                    <TextView
                        android:id="@+id/text_dengji"
                        android:textColor="#f8b804"
                        android:textSize="5sp"
                        android:text="1"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imageView2" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/da_address"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:text="天安门  12-24"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_tou"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_count"
          android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black_san"
            android:textSize="14sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="迪迪热巴和关晓彤机场对比，一个美上天一个涂掉查，鹿晗哭了"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:scaleType="fitXY"
        android:id="@+id/item_recycler"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_share"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:textColor="@color/black_san"
        android:gravity="center|left"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_share"
        android:padding="10dp"
        android:text="分享"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_collect"
        android:layout_weight="1"
        android:textColor="@color/black_san"
        android:gravity="center|left"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_collect"
        android:padding="10dp"
        android:text="收藏"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_zan"
        android:layout_weight="1"
        android:textColor="@color/black_san"
        android:gravity="center|left"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_dianzan"
        android:padding="10dp"
        android:text="点赞"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE6E6E6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
