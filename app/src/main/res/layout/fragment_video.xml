<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="550dp"
                         android:background="@drawable/m3"
                         />
                     <LinearLayout
                         android:id="@+id/img_back"
                         android:layout_margin="20dp"
                         android:gravity="center"
                         android:background="@drawable/shape_fanhui"
                         android:layout_width="30dp"
                         android:layout_height="30dp">
                         <ImageView
                             android:src="@drawable/img_whiteback"
                             android:layout_width="20dp"
                             android:layout_height="20dp" />
                     </LinearLayout>

                    <RelativeLayout
                        android:visibility="visible"
                        android:id="@+id/guanzhu"
                        android:background="@drawable/shape_fanhui"
                       android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:layout_height="30dp">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="25dp"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+关注"
                            />
                    </RelativeLayout>
                     <ImageView
                         android:id="@+id/video_tou"
                         android:layout_alignParentRight="true"
                         android:layout_marginTop="20dp"
                         android:layout_marginRight="20dp"
                         android:background="@drawable/icon_tou"
                         android:layout_width="30dp"
                         android:layout_height="30dp" />
                     <RadioButton
                         android:id="@+id/video_zan"
                         android:layout_alignParentRight="true"
                         android:layout_marginTop="30dp"
                         android:layout_marginRight="20dp"
                         android:button="@null"
                         android:layout_below="@+id/video_tou"
                         android:background="@drawable/sele_dianzan"
                         android:layout_width="25dp"
                         android:layout_height="25dp" />

                     <ImageView
                         android:id="@+id/video_fenxiang"
                         android:layout_alignParentRight="true"
                         android:layout_marginTop="30dp"
                         android:layout_marginRight="20dp"
                         android:layout_below="@+id/video_zan"
                         android:background="@drawable/icon_share"
                         android:layout_width="25dp"
                         android:layout_height="25dp" />

                 </RelativeLayout>
                   <TextView
                       android:padding="10dp"
                       android:id="@+id/video_title"
                       android:textSize="14sp"
                       android:text="每天坚持运动、有利于身体健康、摆脱肥胖、正确的减肥方式、拍客内容"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/text_zan"
                                android:gravity="center|left"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/tui_xin"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="点赞"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/text_time"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"
                            android:text="19小时前"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                 <View
                     android:padding="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="10dp"
                     android:background="@color/color_hui"
                     />

                 <TextView
                     android:id="@+id/text_pinglun"
                     android:gravity="center|left"
                     android:drawablePadding="10dp"
                     android:drawableLeft="@drawable/img_suggest"
                     android:padding="10dp"
                     android:text="144评论"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 
                 <android.support.v7.widget.RecyclerView
                     android:id="@+id/rcy_view"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
             </LinearLayout>
     </ScrollView>

</LinearLayout>
