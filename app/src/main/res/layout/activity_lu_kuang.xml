<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black_san"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="资讯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
         android:background="@color/back_bei"
        ></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/liner1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#f00"
                android:id="@+id/text_zixun"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="燕郊资讯"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:visibility="visible"
            android:id="@+id/zixun_view"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#f00"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_zixun"
            ></View>
        </RelativeLayout>

        <View
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/back_bei"
            ></View>
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/liner2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/text_lukuang"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="实时路况"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:visibility="invisible"
                android:id="@+id/lu_view"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="#f00"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_lukuang"
                ></View>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_bei"
        ></View>
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
