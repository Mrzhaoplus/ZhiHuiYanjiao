<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/img_back"
           android:layout_marginLeft="10dp"
           android:src="@drawable/img_back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   <TextView
      android:textColor="@color/black_san"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:textSize="16sp"
       android:text="每日郊点"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_question"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_wuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="2dp"
        android:background="@color/back_bei"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <RelativeLayout

        android:id="@+id/relar"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liner1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/text_guanzhu"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="关注郊点"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/v1"
                    android:background="@color/text_orage"
                    android:layout_width="80dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_tuijian"
                    android:textColor="@color/text_orage"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="推荐热帖"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/v2"
                    android:layout_gravity="center"
                    android:background="@color/text_orage"
                    android:layout_width="80dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_daren"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="最新发布"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/v3"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:background="@color/text_orage"
                    android:layout_width="80dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fram_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
