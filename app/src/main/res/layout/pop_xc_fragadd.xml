<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:alpha="0.95"
    android:id="@+id/contentView">


<LinearLayout
    android:id="@+id/liners"
    android:layout_marginTop="420dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/btn_paike"
        android:textColor="@color/textcolcr"
        android:textSize="16sp"
        android:gravity="center"
        android:drawablePadding="12dp"
        android:text="拍照"
        android:drawableTop="@drawable/img_paizhao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_jiaodian"
        android:textColor="@color/textcolcr"
        android:textSize="16sp"
        android:gravity="center"
        android:drawablePadding="12dp"
        android:text="相册"
        android:drawableTop="@drawable/img_tuku"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/r_close"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <View
            android:background="@color/transparent_db"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <ImageView
            android:id="@+id/release_end"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
