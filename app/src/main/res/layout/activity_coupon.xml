<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:background="@color/back_bei"
              android:layout_height="match_parent">

    <include
        layout="@layout/include_count"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>


    <RelativeLayout
        android:id="@+id/relar"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liner1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_orage"
                    android:id="@+id/text_guanzhu"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="未使用"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:id="@+id/v1"
                    android:background="@color/text_orage"
                    android:layout_width="60dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_tuijian"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="已使用"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/v2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible"
                    android:background="@color/text_orage"
                    android:layout_width="60dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_daren"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:text="已过期"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/v3"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/text_orage"
                    android:layout_width="60dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FFF5F5F5"
        >
        <android.support.v7.widget.RecyclerView
            android:background="#FFF5F5F5"
            android:id="@+id/mRecycler_wdsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>


</LinearLayout>
